<mvc:View controllerName="sap.btp.ux410solvinge07.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:t="sap.ui.table" xmlns="sap.m" xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar" xmlns:core="sap.ui.core">
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="VizFrame" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <fb:FilterBar id="filterBar" header="Search Filters" useToolbar="false"
                    search="onSearch" filterContainerWidth="10rem">
                    <fb:filterGroupItems>
                        <fb:FilterGroupItem groupName="__$INTERNAL$" name="OrderID"
                            label="Order ID" visibleInFilterBar="true">
                            <fb:control>
                                <ComboBox
                                    id="idOrderID"
                                    showSecondaryValues="true"
                                    items="{
                                        path: '/Orders',
                                        templateShareable: true
                                    }">
                                    <core:ListItem key="{OrderID}" text="{OrderID}"
                                        additionalText="{CustomerID}" />
                                </ComboBox>

                            </fb:control>
                        </fb:FilterGroupItem>

                        <fb:FilterGroupItem groupName="__$INTERNAL$" name="typeList"
                            label="Type List" visibleInFilterBar="true">
                            <fb:control>
                                <ComboBox id="idType" showSecondaryValues="true"
                                    required="true"
                                    selectedKey='bar'
                                    valueState="None"
                                    change="onTypeChange"
                                    items="{path: 'typeList>/list', templateShareable: true}">

                                    <core:Item key="{typeList>type}" text="{typeList>type}" />

                                </ComboBox>
                            </fb:control>
                        </fb:FilterGroupItem>

                    </fb:filterGroupItems>
                </fb:FilterBar>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <!-- <viz:Popover id="idPopOver"></viz:Popover> -->
            <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='bar' selectData="onSelect">
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/Order_Details}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="OrderID"
                                value="{OrderID}" />
                            <viz.data:DimensionDefinition name="ProductID"
                                value="{ProductID}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="UnitPrice"
                                value="{UnitPrice}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure"
                        values="UnitPrice" />
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension"
                        values="OrderID,ProductID" />
                </viz:feeds>
            </viz:VizFrame>
        </f:content>
    </f:DynamicPage>
</mvc:View>