<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <ResponsivePopover
        id="detailsPopover"
        title="{sch_j>/Popover/Prdonum}"
        class="sapUiResponsivePadding--header"
        placement="Auto">
        <endButton>
            <Button text="Close" press="onCloseButtonPress" />
        </endButton>
        <f:SimpleForm
            id="appointmentEditForm"
            editable="false"
            layout="ResponsiveGridLayout"
            singleContainerFullSize="false">
            <Label
                text="Work Center"
                labelFor="Wctxt" />
            <Text id="moreInfoText" text="{path: 'sch_j>/Popover/Wctxt'}" />
            <!-- <Text id="moreInfoText" text="{text}" /> -->
            <Label text="From" labelFor="startDate" />
            <Text text="{ path: 'sch_j>/Popover/startDate', formatter: '.formatDate' }" />
            <Label text="To" labelFor="endDate" />
            <Text text="{ path: 'sch_j>/Popover/endDate', formatter: '.formatDate' }" />

            <Label text="Routing Name" labelFor="Rtname" />
            <Text text="{sch_j>/Popover/Rtname}" />
            <!-- <Text id="appTypeText"
                text="{ path: 'sch_j>/Popover/type', formatter: '.typeFormatter' }" /> -->
        </f:SimpleForm>
    </ResponsivePopover>
</core:FragmentDefinition>