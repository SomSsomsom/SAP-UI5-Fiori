<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <ResponsivePopover
        id="detailsPopover"
        icon="sap-icon://appointment"
        class="sapUiResponsivePadding--header"
        placement="Auto">

        <customHeader>
            <Toolbar>
                <core:Icon src="sap-icon://appointment" class="customIcon" />
                <Title text="예약 정보" />

            </Toolbar>
        </customHeader>
        <beginButton>
            <Button text="상세정보" type="Emphasized" press="handleEditButton" id="detailButton"
            />
        </beginButton>
        <endButton>
            <Button text="닫기" press="onCloseButtonPress" />
        </endButton>
        <f:SimpleForm
            id="appointmentEditForm"
            editable="false"
            layout="ResponsiveGridLayout"
            singleContainerFullSize="false">
            <Label text="생산 오더 번호" labelFor="Prdonum" class="customLabel" />
            <Text text="{sch_j>/Popover/Prdonum}" />
            <Label
                text="작업장"
                labelFor="Wctxt" class="customLabel" />
            <Text id="moreInfoText" text="{path: 'sch_j>/Popover/Wctxt'}" />
            <!-- <Text id="moreInfoText" text="{text}" /> -->
            <Label text="시작시간" labelFor="startDate" class="customLabel" />
            <Text text="{ path: 'sch_j>/Popover/startDate', formatter: '.formatDate' }" />
            <Label text="종료시간" labelFor="endDate" class="customLabel" />
            <Text text="{ path: 'sch_j>/Popover/endDate', formatter: '.formatDate' }" />

            <Label text="공정명" labelFor="Rtname" class="customLabel" />
            <Text text="{sch_j>/Popover/Rtname}" />
            <!-- <Text id="appTypeText"
                text="{ path: 'sch_j>/Popover/type', formatter: '.typeFormatter' }" /> -->
        </f:SimpleForm>
    </ResponsivePopover>
</core:FragmentDefinition>