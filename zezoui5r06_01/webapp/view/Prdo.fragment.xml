<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <ResponsivePopover
        id="PrdoPopover"
        class="sapUiResponsivePadding--header"
        placement="Auto">
        <customHeader>
            <Toolbar>
                <core:Icon src="sap-icon://factory" class="customIcon1" />
                <Title text="생산오더 상세" />

            </Toolbar>
        </customHeader>
        <endButton>
            <Button text="닫기" press="onCloseButtonPress1" />
        </endButton>
        <f:SimpleForm
            id="appointmentEditForm1"
            editable="false"
            layout="ResponsiveGridLayout"
            singleContainerFullSize="false">

            <Label text="생산 오더 번호" labelFor="Prnum" class="customLabel1" />
            <Text text="{sch_j>/Popover/Prdonum}" />

            <Label text="순번" labelFor="Itemnum" class="customLabel1" />
            <Text text="{sch_j>/Popover/Itemnum}" />

            <Label text="생산요청번호" labelFor="Prnum" class="customLabel1" />
            <Text text="{sch_j>/Popover/Prnum}" />

            <Label text="생산 지시 수량" labelFor="Prdoqty" class="customLabel1" />
            <Text
                text="{path: 'sch_j>/Popover/Prdoqty', formatter: '.formatQty'} {sch_j>/Popover/Unit}" />

            <Label text="담당자" labelFor="Pernr" class="customLabel1" />
            <Text text="{sch_j>/Popover/Name} ({sch_j>/Popover/Pernr})" />

            <Label text="상태" labelFor="Status" class="customLabel1" />
            <Text text="{sch_j>/Popover/Status}" />
        </f:SimpleForm>
    </ResponsivePopover>
</core:FragmentDefinition>