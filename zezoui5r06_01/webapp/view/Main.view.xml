            <OverflowToolbar id="otb7">

                <Label text="Work Center" />
                <MultiComboBox
                    selectionChange="handleSelectionChange"
                    width="550px">
                    <core:ListItem key="1001" text="1F-Weighing Room" />
                    <core:ListItem key="1002" text="1F-Manufacturing Room" />
                    <core:ListItem key="1003" text="1F-Filling/Assembly Room1" />
                    <core:ListItem key="1004" text="1F-Filling/Assembly Room2" />
                    <core:ListItem key="1005" text="1F-Filling/Assembly Room3" />

                </MultiComboBox>

            </OverflowToolbar>


            <SinglePlanningCalendar
                id="SPC1"
                class="sapUiSmallMarginTop"
                title="My Calendar"
                viewChange="handleViewChange"
                appointmentSelect="handleAppointmentSelect"
                headerDateSelect="handleHeaderDateSelect"
                startDateChange="handleStartDateChange"
                appointmentDrop="handleAppointmentDrop"
                appointmentResize="handleAppointmentResize"
                appointmentCreate="handleAppointmentCreateDnD"
                moreLinkPress="handleMoreLinkPress"
                appointments="{path: 'sch_j>/'}">

                <actions>
                    <Button id="legendButton" icon="sap-icon://legend" press="handleOpenLegend"
                        tooltip="Open SinglePlanningCalendar legend" ariaHasPopup="Dialog" />
                </actions>
                <views>
                    <SinglePlanningCalendarMonthView key="MonthView" title="Month" />
                    <SinglePlanningCalendarWeekView key="WeekView" title="Week" />
                    <SinglePlanningCalendarDayView key="DayView" title="Day" />
                    <!-- <SinglePlanningCalendarWorkWeekView key="WorkWeekView" title="Work Week" /> -->


                </views>
                <appointments>
                    <!-- <unified:CalendarAppointment
