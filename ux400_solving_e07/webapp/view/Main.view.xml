<mvc:View controllerName="sap.btp.ux400solvinge07.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiLargeMargin">
                <Text text="버튼을 클릭하면 아래 Input에 값이 랜덤으로 채워집니다." />
                <Input id="idInput1" type="Number" change="onValueChange" valueState="None" />
                <Button text="Random" press="onRandomPress" />
            </VBox>

            <t:Table
                id="idTable"
                rows="{list>/lists}"
                selectionMode="MultiToggle"
                visibleRowCount="7"
                width="50%"
                paste="onPaste"
                ariaLabelledBy="title">
                <t:extension>
                    <OverflowToolbar style="Clear">
                        <Title id="title" text="랜덤 목록 리스트" />
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column>
                        <Label text="value" />
                        <t:template>
                            <Text text="{list>value}" wrapping="false" />
                        </t:template>
                    </t:Column>

                </t:columns>

            </t:Table>
            <Button text="open Product" press="onProductButtonPress" />

        </content>
    </Page>
</mvc:View>