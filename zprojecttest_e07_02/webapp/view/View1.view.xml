<mvc:View controllerName="C05.zprojectteste0702.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content> 
            <l:VerticalLayout >
                <!-- <Label text="입력하세요" labelFor="idText" /> -->
                <Input id="idInput" submit="onSubmit"/>
                <Text id="idText"/>
         
            </l:VerticalLayout>

        <l:VerticalLayout>
          <l:content>
		   <Input id="idInput1"/>
             <Select width="100%" id="idSelect" >
              <items>
               <core:Item key="plus" text="+" />
               <core:Item key="minus" text="-" />
               <core:Item key="multiply" text="*" />
               <core:Item key="divide" text="/" />
              </items>
             </Select>
          <Input id="idInput2"/>
            <Button type="Emphasized" text="Button text" width="100%" press="onButtonPress"></Button>
		    
         </l:content>
        </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>
